<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <com.jmedeisis.draglinearlayout.DragLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/drag_drop_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_one_drag_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:text=" First Line"
                android:background="#B0E86F"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_two_drag_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:background="#8BC34A"
                android:text=" Second Line"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_three_drag_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="#84B34E"
                android:textColor="#000000"
                android:text=" Third Line"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_four_drag_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:background="#4CAF50"
                android:gravity="center"
                android:padding="10dp"
                android:text=" Fourth Line"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_five_drag_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=" Fifth Line"
                android:background="#448C47"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_six_drag_drop"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text=" Sixth Line"
                android:background="#2D7530"
                android:textSize="30dp"
                android:textStyle="bold" />

        </com.jmedeisis.draglinearlayout.DragLinearLayout>

    </LinearLayout>

</ScrollView>